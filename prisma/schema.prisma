generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum Role {
  USER
  ADMIN
  MANUFACTURER
}

model User {
  id             String   @id @default(uuid()) @db.Uuid      @map("id")
  name           String                                        @map("name")
  countryCode    String   @db.VarChar(10)                      @map("country_code")
  phone          String   @unique @db.VarChar(15)              @map("phone")
  role           Role     @default(USER)                       @map("role")
  image          String?  @db.VarChar(255)                     @map("image")
  bio            String?                                       @map("bio")
  isPrivatePost  Boolean  @default(false)                      @map("is_private_post")
  createdAt      DateTime @default(now())                      @map("created_at")
  updatedAt      DateTime @updatedAt                           @map("updated_at")

  @@map("users") // actual SQL table will be `users`
}